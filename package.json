{
  "name": "pomme-page",
  "version": "0.1.0",
  "description": "une homepage pour mon navigateur",
  "main": "src/index.pug",
  "author": "vinz",
  "license": "MIT",
  "scripts": {
    "dev": "npm run clean && npx parcel src/index.pug --out-dir development -p 3000",
    "build": "npm run clean && npx parcel build src/index.pug --out-dir dist --public-url ./ --no-cache",
    "serve": "npx serve dist",
    "clean": "rimraf ./development && rimraf -rf ./.cache && rimraf -rf ./dist",
    "lint": "npm run clean && xo  --env=browser --fix --no-semicolon './**/*.js' && stylelint '**/*.css'",
    "format": "npm run clean && stylelint --fix './**/*.css' && prettier --write 'src/**/*.pug'"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@prettier/plugin-pug": "^1.13.3",
    "autoprefixer": "^9.8.6",
    "husky": "^4.3.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.2.1",
    "pug": "^3.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.7.2",
    "stylelint-config-rational-order": "^0.0.4",
    "stylelint-config-standard": "^20.0.0",
    "xo": "^0.37.1"
  },
  "browserslist": [
    "since 2017-06"
  ],  
  "prettier": {
    "printWidth": 130,
    "singleQuote": true
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "grid": true
      }
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-rational-order"
    ],
    "rules": {
      "selector-type-no-unknown": null
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run clean && npm run lint && npm run format"
    }
  }
}
